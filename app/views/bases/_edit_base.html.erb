<%= form_with(model: base, local: true) do |f| %>
  <%= f.label :base_number, "拠点番号", class: "label--edit" %>
  <%= f.number_field :base_number, class: "form-control" %>
  
  <%= f.label :base_name, class: "label--edit" %>
  <%= f.text_field :base_name, class:"form-control" %>
  
  <%= f.label :base_attendance, class: "label--edit" %>
  <%= f.text_field :base_attendance, class: "form-control" %>
  
  <%= f.submit class: "btn btn-primary btn-block" %>
<% end %>